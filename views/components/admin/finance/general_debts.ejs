<script src="/assets/axios.min.js"></script>
<script src="/assets/jquery.min.js"></script>
<script src="/assets/notification.js"></script>
<script>
    /* 
      @description: Managerga tegishli filiallarni olish
      @api: /api/user/decode
      @method: GET
    */
    const setSelectionSingle = async (DATA, APPENDING, MESSAGE) => {
        if (DATA == "") {
            const appends = $(APPENDING);
            await appends.html("");
            appends.append(`<option value="" selected>Mavjud emas</option> `);
            danger(MESSAGE);
        } else {
            const appends = $(APPENDING);
            await appends.html("");
            appends.append(`<option value="" selected>Tanlash</option> `);
            DATA.forEach((item) => {
                appends.append(
                    `<option value="${item._id}">${item.name}</option>`
                );
            });
        }
    }
    const user_token = window.localStorage.getItem('user')
    axios.get('/api/user/decode', { headers: { authorization: user_token } }).then((res) => {
        const id = res.data.id; // user id
         axios.get(`/api/user/${id}`).then(async (res) => {
            const school = res.data.data.school
            setSelectionSingle(school, "#default_school", "O'quv markazlari mavjud emas")
            setSelectionSingle(school, "#group_filter_school", "O'quv markazlari mavjud emas")
        })
    })

    const filterByGroup = (id) => {
        axios.get(`/api/group/filter/${id}`, { params: { actions: "active" } }).then(async (res) => {
            const data = res.data.data;
            setSelectionSingle(data, "#GROUP_FILTER_group", "Guruhlar mavjud emas")
        })
    }










    const setTableClone = async (data) => {
        if (data == "") {
            const put_tables = $(".put_tables")
            await put_tables.html("")
            danger("Ma'lumot topilmadi")
        }
        else {
            const put_tables = $(".put_tables")
            await put_tables.html("")
            data.forEach((item, index) => {
                put_tables.append(`
                        <tr>
                            <td>${item.username}</td>
                            <td>${item.group}</td>
                            <td class="months">
                                
                            </td>
                            <td class="types_check">

                            </td>
                            <td>

                            </td>
                        </tr>
                    `)
                const months = document.getElementsByClassName("months");
                months.forEach((inputs, inputsIndex) => {
                    if (inputsIndex == index) {
                        const month = String(item.startMonth).split("/")[1]
                        if (month == "01") inputs.innerHTML = `
                                                                <span style="width: 110px;" class="badge bg-warning text-light font-size-14 p-2">Yanvar</span>
                                                                <span class="badge bg-primary text-light font-size-14 p-2">${item.startMonth} - ${item.endMonth} </span>
                                                            `
                        if (month == "02") inputs.innerHTML = `
                                                                <span style="width: 110px;" class="badge bg-warning text-light font-size-14 p-2">Fevral</span>
                                                                <span class="badge bg-primary text-light font-size-14 p-2">${item.startMonth} - ${item.endMonth} </span>
                                                            `
                        if (month == "03") inputs.innerHTML = `
                                                                <span style="width: 110px;" class="badge bg-warning text-light font-size-14 p-2">Mart</span>
                                                                <span class="badge bg-primary text-light font-size-14 p-2">${item.startMonth} - ${item.endMonth} </span>
                                                            `
                        if (month == "04") inputs.innerHTML = `
                                                                <span style="width: 110px;" class="badge bg-warning text-light font-size-14 p-2">Aprel</span>
                                                                <span class="badge bg-primary text-light font-size-14 p-2">${item.startMonth} - ${item.endMonth} </span>
                                                            `
                        if (month == "05") inputs.innerHTML = `
                                                                <span style="width: 110px;" class="badge bg-warning text-light font-size-14 p-2">May</span>
                                                                <span class="badge bg-primary text-light font-size-14 p-2">${item.startMonth} - ${item.endMonth} </span>
                                                            `
                        if (month == "06") inputs.innerHTML = `
                                                                <span style="width: 110px;" class="badge bg-warning text-light font-size-14 p-2">Iyun</span>
                                                                <span class="badge bg-primary text-light font-size-14 p-2">${item.startMonth} - ${item.endMonth} </span>
                                                            `
                        if (month == "07") inputs.innerHTML = `
                                                                <span style="width: 110px;" class="badge bg-warning text-light font-size-14 p-2">Iyul</span>
                                                                <span class="badge bg-primary text-light font-size-14 p-2">${item.startMonth} - ${item.endMonth} </span>
                                                            `
                        if (month == "08") inputs.innerHTML = `
                                                                <span style="width: 110px;" class="badge bg-warning text-light font-size-14 p-2">Avgust</span>
                                                                <span class="badge bg-primary text-light font-size-14 p-2">${item.startMonth} - ${item.endMonth} </span>
                                                            `
                        if (month == "09") inputs.innerHTML = `
                                                                <span style="width: 110px;" class="badge bg-warning text-light font-size-14 p-2">Sentyabr</span>
                                                                <span class="badge bg-primary text-light font-size-14 p-2">${item.startMonth} - ${item.endMonth} </span>
                                                            `
                        if (month == "10") inputs.innerHTML = `
                                                                <span style="width: 110px;" class="badge bg-warning text-light font-size-14 p-2">Oktyabr</span>
                                                                <span class="badge bg-primary text-light font-size-14 p-2">${item.startMonth} - ${item.endMonth} </span>
                                                            `
                        if (month == "11") inputs.innerHTML = `
                                                                <span style="width: 110px;" class="badge bg-warning text-light font-size-14 p-2">Noyabr</span>
                                                                <span class="badge bg-primary text-light font-size-14 p-2">${item.startMonth} - ${item.endMonth} </span>
                                                            `
                        if (month == "12") inputs.innerHTML = `
                                                                <span style="width: 110px;" class="badge bg-warning text-light font-size-14 p-2">Dekabr</span>
                                                                <span class="badge bg-primary text-light font-size-14 p-2">${item.startMonth} - ${item.endMonth} </span>
                                                            `

                    }
                })



                const types_check = document.getElementsByClassName("types_check");
                types_check.forEach((inputs, inputsIndex) => {
                    if (inputsIndex == index) {
                        if (item.status == "debtor") {
                            inputs.innerHTML = `<span class="badge bg-danger text-light font-size-14 p-2">Qarzdorlik bor</span>`
                        } else {
                            inputs.innerHTML = `<span class="badge bg-success text-light font-size-14 p-2">Qarzdorlik yo'q</span>`
                        }
                    }
                })
            })
        }

    }
    // O'quv markazi boyicha qarzdorlarni olish
    const filterBySchools = () => {
        const school = document.getElementById("default_school").value;
        const year = document.getElementById("needPayment_year").value;
        const month = document.getElementById("needPayment_month").value;
        const types = document.getElementById("needPayment_status").value;
        if (
            school == "" ||
            month == "" ||
            year == "" ||
            types == ""
        ) {
            warning("Ma'lumotni to'liq kiriting")
        }
        else {
            axios.get("/api/need_payment/school", {
                params: {
                    MONTH: month,
                    STATUS: types,
                    YEAR: year,
                }
            }).then(async (res) => {
                const data = res.data.data;
                setTableClone(data)
            })
        }
    }


    // Guruh bo'yicha boyicha qarzdorlarni olish
    const filterByGroups = () => {
        const school = document.getElementById("group_filter_school").value;
        const group = document.getElementById("GROUP_FILTER_group").value;
        const month = document.getElementById("GROUP_FILTER_month").value;
        const year = document.getElementById("GROUP_FILTER_year").value;
        const status = document.getElementById("GROUP_FILTER_status").value;
        if (
            school == "" ||
            group == "" ||
            month == "" ||
            year == "" ||
            status == ""
        ) {
            warning("Ma'lumotni to'liq kiriting")
        } else {
            axios.get("/api/need_payment/group", {
                params: {
                    MONTH: month,
                    STATUS: status,
                    YEAR: year,
                    GROUP: group,
                }
            }).then(async (res) => {
                const data = res.data.data;
                setTableClone(data)
            })
        }
    }









</script>